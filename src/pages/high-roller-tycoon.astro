            getCPS() {
                let baseCPS = 0;
                CONFIG.BUILDINGS.forEach(b => {
                    if (b.type === 'passive') {
                        const count = this.state.buildingCounts[b.id];
                        // Linear multiplier for now (we will upgrade this to Milestones later)
                        const multiplier = Math.pow(2, Math.floor(count / CONFIG.MILESTONE_STEP));
                        baseCPS += (b.baseInc * count) * multiplier;
                    }
                });
                
                const prestigeMult = 1 + (this.state.prestigeChips * CONFIG.PRESTIGE_BONUS_PER_CHIP);
                return baseCPS * prestigeMult;
            },

            getClickPower() {
                const count = this.state.buildingCounts['clicker'];
                const b = CONFIG.BUILDINGS.find(x => x.id === 'clicker');
                
                const multiplier = Math.pow(2, Math.floor(count / CONFIG.MILESTONE_STEP));
                const base = 1 + (b.baseInc * count * multiplier);
                
                const prestigeMult = 1 + (this.state.prestigeChips * CONFIG.PRESTIGE_BONUS_PER_CHIP);
                return base * prestigeMult;
            },

            getCost(id) {
                const b = CONFIG.BUILDINGS.find(x => x.id === id);
                const count = this.state.buildingCounts[id];
                return b.baseCost * Math.pow(1.15, count);
