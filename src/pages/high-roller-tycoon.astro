---
// High Roller Tycoon - Easter Egg Game Page
import GoogleAnalytics from '../components/GoogleAnalytics.astro';

// Prerender this page for better performance
export const prerender = true;
---
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>High Roller Tycoon - Ultimate Edition</title>
    <GoogleAnalytics />
    <script src="https://cdn.tailwindcss.com" is:inline></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@700;900&family=Lato:wght@400;700&family=Roboto+Mono:wght@500&display=swap" rel="stylesheet">
    <script is:inline>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        felt: {
                            DEFAULT: '#0f3923',
                            dark: '#052e16',
                            light: '#14532d'
                        },
                        gold: {
                            400: '#fbbf24',
                            500: '#f59e0b',
                            600: '#d97706',
                        }
                    },
                    fontFamily: {
                        casino: ['Cinzel', 'serif'],
                        ui: ['Lato', 'sans-serif'],
                        mono: ['Roboto Mono', 'monospace'],
                    },
                    boxShadow: {
                        'neon': '0 0 5px theme("colors.gold.400"), 0 0 20px theme("colors.gold.500")',
                        'felt-inset': 'inset 0 0 100px rgba(0,0,0,0.9)',
                    }
                }
            }
        }
    </script>
    <style>
        body {
            background-color: #052e16;
            background-image: 
                radial-gradient(circle at 50% 50%, rgba(255,255,255,0.05) 0%, rgba(0,0,0,0) 60%),
                repeating-linear-gradient(45deg, rgba(0,0,0,0.02) 0px, rgba(0,0,0,0.02) 2px, transparent 2px, transparent 4px);
            overflow: hidden;
            touch-action: none;
            user-select: none;
        }
        
        /* Mobile scrolling fix - ensure upgrade list is scrollable */
        @media (max-width: 768px) {
            /* Override body touch-action for the aside container */
            aside.order-3 {
                touch-action: pan-y !important;
                position: relative;
                height: 50vh !important;
                max-height: 50vh !important;
                overflow: hidden !important;
            }
            
            /* Make the upgrade list scrollable */
            #upgrade-list {
                position: relative;
                height: 100% !important;
                max-height: 100% !important;
                overflow-y: scroll !important;
                overflow-x: hidden !important;
                -webkit-overflow-scrolling: touch !important;
                touch-action: pan-y !important;
                overscroll-behavior-y: contain;
                /* Force hardware acceleration for smooth scrolling */
                transform: translateZ(0);
                will-change: scroll-position;
            }
        }

        .poker-chip {
            width: 180px;
            height: 180px;
            border-radius: 50%;
            background: radial-gradient(circle at 30% 30%, #dc2626, #991b1b);
            border: 12px dashed white;
            box-shadow: 
                0 10px 0 #7f1d1d,
                0 20px 20px rgba(0,0,0,0.5);
            position: relative;
            transition: transform 0.05s, box-shadow 0.05s;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 10;
        }

        @media (min-width: 768px) {
            .poker-chip {
                width: 240px;
                height: 240px;
            }
        }

        .poker-chip::before {
            content: '';
            position: absolute;
            inset: 15px;
            border-radius: 50%;
            border: 2px solid rgba(255,255,255,0.2);
            background: transparent;
        }

        .poker-chip:active, .poker-chip.active {
            transform: translateY(10px);
            box-shadow: 
                0 0 0 #7f1d1d,
                0 5px 10px rgba(0,0,0,0.5);
        }

        .chip-inner {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background: #b91c1c;
            border: 4px solid #fcd34d;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: inset 0 4px 10px rgba(0,0,0,0.3);
        }

        @media (min-width: 768px) {
            .chip-inner {
                width: 140px;
                height: 140px;
            }
        }

        @keyframes float-cash {
            0% { opacity: 1; transform: translateY(0) scale(1); }
            100% { opacity: 0; transform: translateY(-80px) scale(1.2); }
        }

        @keyframes golden-float {
            0% { left: -100px; transform: rotate(0deg); }
            100% { left: 110vw; transform: rotate(360deg); }
        }

        @keyframes pulse-glow {
            0%, 100% { box-shadow: 0 0 15px #f59e0b; }
            50% { box-shadow: 0 0 30px #fbbf24; }
        }

        .floating-text {
            position: fixed;
            pointer-events: none;
            font-family: 'Roboto Mono', monospace;
            font-weight: bold;
            text-shadow: 2px 2px 0 #000;
            z-index: 50;
            animation: float-cash 1s ease-out forwards;
            will-change: transform, opacity;
        }
        
        #floating-text-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            pointer-events: none;
            z-index: 50;
            overflow: hidden;
        }

        .golden-cookie {
            position: absolute;
            top: 20%;
            width: 64px;
            height: 64px;
            background: radial-gradient(#fbbf24, #d97706);
            border: 4px solid #fff;
            border-radius: 50%;
            box-shadow: 0 0 20px #fbbf24;
            z-index: 100;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: #78350f;
            animation: golden-float 15s linear;
        }

        .custom-scroll::-webkit-scrollbar { width: 6px; }
        .custom-scroll::-webkit-scrollbar-track { background: rgba(0,0,0,0.3); }
        .custom-scroll::-webkit-scrollbar-thumb { background: #d97706; border-radius: 10px; }

        .modal-overlay {
            background: rgba(0,0,0,0.85);
            backdrop-filter: blur(5px);
        }
    </style>
</head>
