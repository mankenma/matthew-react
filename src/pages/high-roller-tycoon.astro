    <div id="event-container" class="absolute inset-0 pointer-events-none overflow-hidden z-40"></div>
    <div id="floating-text-container" class="fixed inset-0 pointer-events-none overflow-hidden z-50"></div>

    <aside class="w-full md:w-1/4 bg-black/40 border-b md:border-b-0 md:border-r border-gold-600/30 p-3 pt-2 md:p-4 md:pt-4 flex flex-col justify-between z-20 backdrop-blur-sm order-2 md:order-1 h-[22vh] md:h-full shrink-0">
        <div>
            <a href="/" class="block mb-2 md:mb-4 group">
                <button class="w-full py-0.5 md:py-2 px-4 bg-gradient-to-r from-slate-800 to-slate-900 border border-slate-600 hover:border-gold-500 rounded text-slate-300 hover:text-white transition-all flex items-center justify-center gap-2 font-ui text-xs md:text-sm font-bold">
                    <i class="fas fa-arrow-left group-hover:-translate-x-1 transition-transform"></i>
