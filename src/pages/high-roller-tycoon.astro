                }
            },

            async submitScore() {
                const nameInput = document.getElementById('leaderboard-name-input');
                if (!nameInput) return;
                const name = nameInput.value.trim();
                if (name.toLowerCase() === 'mattadmn') { window.location.href = '/admin'; return; }
                const chips = this.state.prestigeChips;
                const cash = this.state.cash;
                const time = Date.now() - this.state.startTime; // Calculate time played
                if (!name || name.length === 0) { alert('Please enter your name'); nameInput.focus(); return; }
                if (name.length > 12) { alert('Name must be 12 characters or less'); nameInput.focus(); return; }
                
                // Capture metadata
                const assets = this.state.buildingCounts; // JSON object of building counts
                const incomePerSecond = this.getCPS(); // Current income per second
                const userAgent = navigator.userAgent; // Device/browser info
                
                try {
                    const response = await fetch('/api/leaderboard', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ 
                            name, 
                            chips, 
                            cash, 
                            time,
                            assets,
                            incomePerSecond,
                            userAgent
                        }),
                    });
                    if (response.status === 422) { alert('That name is not allowed. Please choose another.'); return; }
                    if (!response.ok) { const error = await response.json(); throw new Error(error.error || 'Failed to submit score'); }
                    await this.showLeaderboard();
                    nameInput.value = '';
                    this.playSfx('win');
                    this.spawnText(window.innerWidth / 2, window.innerHeight / 2, 'Score Submitted!', true);
                } catch (error) {
                    console.error('Error submitting score:', error);
                    alert('Failed to submit score. Please try again.');
                }
            }
        };

        window.addEventListener('DOMContentLoaded', () => GAME.init());
    </script>
