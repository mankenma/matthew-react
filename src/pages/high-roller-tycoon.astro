            // --- CORE ENGINE: DELTA TIME LOOP ---
            gameLoop(currentTime) {
                // Calculate time difference in seconds
                const dt = (currentTime - this.lastFrameTime) / 1000;
                this.lastFrameTime = currentTime;

                // Cap dt to prevent massive jumps if tab was inactive for hours (max 1s catchup per frame)
                const safeDt = Math.min(dt, 1.0);

                const cps = this.getCPS();
                if (cps > 0) {
                    this.addCash(cps * safeDt);
                }

                // Random Events (Golden Chip) - Probability scaled by time
                if (Math.random() < 0.005 * safeDt) this.spawnGoldenChip();

                this.state.lastSaveTime = Date.now();
                this.updateUI();

                requestAnimationFrame((t) => this.gameLoop(t));
