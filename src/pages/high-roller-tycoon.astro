        </div>

        <div class="relative">
            <button id="main-clicker" class="poker-chip group" aria-label="Gamble">
                <div class="chip-inner">
                    <i class="fas fa-gem text-5xl text-white drop-shadow-md group-hover:scale-110 transition-transform duration-200"></i>
                </div>
            </button>
            <div class="absolute -bottom-12 left-1/2 -translate-x-1/2 text-slate-500/50 text-xs font-mono whitespace-nowrap hidden md:block">
                SPACE or CLICK
            </div>
        </div>
    </main>

    <aside class="w-full md:w-[400px] bg-black/60 border-t md:border-t-0 md:border-l border-gold-600/30 flex flex-col z-30 backdrop-blur-md order-3 h-[35vh] md:h-full pb-[env(safe-area-inset-bottom)]">
        <div class="flex border-b border-white/10 bg-black/40 flex-shrink-0">
            <button id="tab-assets" class="flex-1 py-3 text-sm font-bold text-gold-400 border-b-2 border-gold-500 bg-white/5 font-ui transition-colors" onclick="GAME.switchTab('assets')">
                <i class="fas fa-building mr-2"></i>Assets
            </button>
            <button id="tab-settings" class="flex-1 py-3 text-sm font-bold text-slate-500 hover:text-slate-300 transition-colors font-ui border-b-2 border-transparent" onclick="GAME.switchTab('settings')">
                <i class="fas fa-sliders-h mr-2"></i>Settings
            </button>
        </div>

        <button onclick="GAME.showLeaderboard()" class="w-full mt-2 mx-3 py-2 text-xs font-bold text-gold-500 border border-gold-600/30 rounded bg-black/40 hover:bg-gold-600/20 transition-all font-mono uppercase tracking-widest flex-shrink-0">
            <i class="fas fa-trophy mr-2"></i>Global Ranking
        </button>

        <div id="upgrade-list" class="flex-1 overflow-y-auto custom-scroll p-3 space-y-2 pb-24" style="min-height: 0;">
        </div>

        <div id="settings-view" class="hidden flex-1 overflow-y-auto custom-scroll p-6 space-y-6 pb-24">
            <div class="text-center mb-6">
                <h3 class="font-casino text-2xl text-white mb-1">Casino Atmosphere</h3>
                <p class="text-xs text-slate-400">Configure your audio experience</p>
            </div>

            <div class="bg-black/40 p-4 rounded border border-white/10 flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full bg-gold-600/20 flex items-center justify-center text-gold-400">
                        <i class="fas fa-music"></i>
                    </div>
                    <div>
                        <div class="font-bold text-slate-200">Jazz Soundtrack</div>
                        <div class="text-xs text-slate-500">Smooth casino jazz</div>
                    </div>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                    <input type="checkbox" id="music-toggle" class="sr-only peer" onchange="GAME.toggleMusic()">
                    <div class="w-11 h-6 bg-slate-700 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-gold-600"></div>
                </label>
            </div>

            <div class="bg-black/40 p-4 rounded border border-white/10 flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full bg-blue-600/20 flex items-center justify-center text-blue-400">
                        <i class="fas fa-volume-up"></i>
                    </div>
                    <div>
                        <div class="font-bold text-slate-200">Sound Effects</div>
                        <div class="text-xs text-slate-500">Chips, cash, and wins</div>
                    </div>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                    <input type="checkbox" id="sfx-toggle" class="sr-only peer" onchange="GAME.toggleSfx()">
                    <div class="w-11 h-6 bg-slate-700 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-green-600"></div>
                </label>
            </div>

             <div class="mt-8 text-center">
                 <button onclick="GAME.hardReset()" class="text-xs text-red-900/50 hover:text-red-500 transition-colors uppercase tracking-widest font-bold">
                     <i class="fas fa-skull mr-1"></i> Hard Reset Save
                 </button>
            </div>
        </div>
    </aside>

    <div id="prestige-modal" class="hidden fixed inset-0 modal-overlay z-50 flex items-center justify-center p-4">
        <div class="bg-slate-900 border-2 border-gold-500 rounded-lg max-w-md w-full p-6 shadow-neon relative overflow-hidden">
            <div class="absolute -top-10 -right-10 w-32 h-32 bg-gold-500/20 blur-3xl rounded-full pointer-events-none"></div>

            <h2 class="font-casino text-3xl text-white text-center mb-2">CASH OUT?</h2>
            <p class="text-slate-400 text-center text-sm mb-6 font-ui">Reset your cash and buildings to earn <span class="text-gold-400 font-bold">Reputation Chips</span>.</p>

            <div class="flex justify-between items-center bg-black/50 p-4 rounded mb-6 border border-white/10">
                <div class="text-center">
                    <div class="text-xs text-slate-500 uppercase">Current Bonus</div>
                    <div class="text-red-400 font-mono font-bold text-xl" id="modal-current-bonus">0%</div>
                </div>
                <div class="text-2xl text-slate-600"><i class="fas fa-arrow-right"></i></div>
                <div class="text-center">
                    <div class="text-xs text-slate-500 uppercase">New Bonus</div>
                    <div class="text-green-400 font-mono font-bold text-xl" id="modal-new-bonus">0%</div>
                </div>
            </div>

            <div class="text-center mb-6">
                <span class="text-sm text-slate-300">You will gain:</span>
                <div class="flex items-center justify-center gap-2 mt-1">
                    <i class="fas fa-crown text-gold-400 text-2xl"></i>
                    <span id="modal-gain-amount" class="text-3xl font-bold text-white font-mono">0</span>
                </div>
            </div>

            <div class="flex gap-3">
                <button onclick="document.getElementById('prestige-modal').classList.add('hidden')" class="flex-1 py-3 rounded bg-slate-800 text-slate-300 hover:bg-slate-700 font-bold transition-colors">Cancel</button>
                <button onclick="GAME.doPrestige()" class="flex-1 py-3 rounded bg-gradient-to-r from-gold-600 to-gold-500 text-black font-bold hover:brightness-110 shadow-lg transition-all">PRESTIGE</button>
            </div>
        </div>
    </div>

    <div id="welcome-modal" class="hidden fixed inset-0 modal-overlay z-50 flex items-center justify-center p-4">
        <div class="bg-slate-900 border border-green-500 rounded-lg max-w-sm w-full p-6 shadow-2xl text-center">
            <h2 class="font-casino text-2xl text-green-400 mb-2">Welcome Back, Boss!</h2>
            <p class="text-slate-300 text-sm mb-4">While you were away, your casino operations generated:</p>
            <div class="text-4xl font-mono text-white font-bold mb-6 text-green-400 drop-shadow-lg">
                $<span id="offline-earnings">0</span>
            </div>
            <button onclick="document.getElementById('welcome-modal').classList.add('hidden')" class="w-full py-2 bg-green-600 hover:bg-green-500 text-white font-bold rounded">Collect Cash</button>
        </div>
    </div>

    <div id="leaderboard-modal" class="hidden fixed inset-0 modal-overlay z-50 flex items-center justify-center p-4">
        <div class="bg-slate-900 border-2 border-gold-500 rounded-lg max-w-md w-full p-6 shadow-neon relative overflow-hidden">
            <div class="absolute -top-10 -right-10 w-32 h-32 bg-gold-500/20 blur-3xl rounded-full pointer-events-none"></div>

            <div class="flex justify-between items-center mb-4">
                <h2 class="font-casino text-3xl text-white">Global Ranking</h2>
                <button onclick="document.getElementById('leaderboard-modal').classList.add('hidden')" class="text-slate-400 hover:text-white transition-colors">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>

            <div id="leaderboard-loading" class="text-center py-8">
                <i class="fas fa-spinner fa-spin text-gold-400 text-3xl mb-4"></i>
                <p class="text-slate-400">Loading leaderboard...</p>
            </div>

            <div id="leaderboard-content" class="hidden">
                <div class="bg-black/50 rounded-lg border border-white/10 mb-4 max-h-64 overflow-y-auto custom-scroll">
                    <table class="w-full text-sm font-ui">
                        <thead class="sticky top-0 bg-black/80 border-b border-white/10">
                            <tr>
                                <th class="text-left py-2 px-3 text-gold-400 font-bold">Rank</th>
                                <th class="text-left py-2 px-3 text-gold-400 font-bold">Name</th>
                                <th class="text-right py-2 px-3 text-gold-400 font-bold">Chips</th>
                                <th class="text-right py-2 px-3 text-gold-400 font-bold">Cash</th>
                                <th class="text-right py-2 px-3 text-gold-400 font-bold">Time</th>
                            </tr>
                        </thead>
                        <tbody id="leaderboard-table-body">
                        </tbody>
                    </table>
                </div>

                <div class="border-t border-white/10 pt-4">
                    <p class="text-xs text-slate-400 mb-3 text-center">Submit your score (ranked by Chips, then Cash):</p>
                    <div class="flex gap-2">
                        <input type="text" id="leaderboard-name-input" placeholder="Your name (max 12 chars)" maxlength="12" class="flex-1 px-3 py-2 bg-black/50 border border-white/20 rounded text-white placeholder-slate-500 focus:outline-none focus:border-gold-500 font-ui text-sm"/>
                        <button onclick="GAME.submitScore()" class="px-4 py-2 bg-gradient-to-r from-gold-600 to-gold-500 text-black font-bold hover:brightness-110 shadow-lg transition-all rounded font-ui text-sm">Submit</button>
                    </div>
                    <p class="text-xs text-slate-500 mt-2 text-center">
                        Chips: <span id="leaderboard-current-chips" class="text-gold-400 font-bold">0</span> |
                        Cash: <span id="leaderboard-current-cash" class="text-green-400 font-bold">$0</span>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script is:inline>
        // --- ARCHITECTURE UPGRADE: SEPARATE CONFIG FROM STATE ---
        const CONFIG = {
            FPS: 60,
            PRESTIGE_BONUS_PER_CHIP: 0.05,
            MILESTONE_STEP: 25,
            // Classic Vegas Casino Chip Palette
            CHIP_PALETTE: [
                { hex: '#F4F4F2', name: 'White' },  // White
                { hex: '#C62828', name: 'Red' },    // Red
                { hex: '#1565C0', name: 'Blue' },   // Blue
                { hex: '#2E7D32', name: 'Green' },  // Green
                { hex: '#1C1C1C', name: 'Black' },  // Black
                { hex: '#6A1B9A', name: 'Purple' }  // Purple
            ],
            BUILDINGS: [
                { id: 'clicker', name: 'Loaded Dice', icon: 'fa-dice', baseCost: 15, baseInc: 1, type: 'active', desc: '+Click Power' },
                { id: 'slot', name: 'Slot Machine', icon: 'fa-gamepad', baseCost: 100, baseInc: 5, type: 'passive', desc: 'Auto Cash' },
                { id: 'poker', name: 'Poker Table', icon: 'fa-diamond', baseCost: 1000, baseInc: 45, type: 'passive', desc: 'Auto Cash' },
                { id: 'roulette', name: 'Roulette', icon: 'fa-circle-notch', baseCost: 12000, baseInc: 250, type: 'passive', desc: 'Auto Cash' },
                // NEW CONTENT: BACCARAT
                { id: 'baccarat', name: 'Baccarat Table', icon: 'fa-glass-martini-alt', baseCost: 45000, baseInc: 500, type: 'passive', desc: 'Auto Cash' },
                { id: 'blackjack', name: 'Blackjack Pit', icon: 'fa-clone', baseCost: 150000, baseInc: 1200, type: 'passive', desc: 'Auto Cash' },
                { id: 'hotel', name: 'Luxury Hotel', icon: 'fa-hotel', baseCost: 2000000, baseInc: 8500, type: 'passive', desc: 'Auto Cash' }
            ]
        };

        const GAME = {
            // State only tracks what CHANGES (User Data)
            state: {
                cash: 0,
                lifetimeCash: 0,
                prestigeChips: 0,
                startTime: Date.now(),
                lastSaveTime: Date.now(),
                settings: { music: true, sfx: true },
                buildingCounts: {}
            },

            audioCtx: null,
            audioFiles: {},
            bgm: null,
            lastFrameTime: 0,

            init() {
                this.load();
                CONFIG.BUILDINGS.forEach(b => {
                    if (typeof this.state.buildingCounts[b.id] === 'undefined') {
                        this.state.buildingCounts[b.id] = 0;
                    }
                });
                
                if (!this.state.settings) this.state.settings = { music: true, sfx: true };
                if (typeof this.state.settings.music === 'undefined') this.state.settings.music = true;
                if (typeof this.state.settings.sfx === 'undefined') this.state.settings.sfx = true;

                this.setupUI();
                this.setupAudio();
                this.setupBackground();
                
                this.lastFrameTime = performance.now();
                requestAnimationFrame((t) => this.gameLoop(t));

                this.fixMobileScrolling();
                this.checkOfflineEarnings();
                
                setInterval(() => this.save(), 30000);
            },

